{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"], // Add DOM and DOM.Iterable for React projects
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // Crucial for React components

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",      // Include all .ts files in src and its subdirectories
    "src/**/*.tsx",     // Include all .tsx (React components) files in src and its subdirectories
    "src/**/*.d.ts",     // Include all declaration files in src and its subdirectories
    "vite.config.ts"    // Keep this if vite.config.ts needs to be type-checked
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
